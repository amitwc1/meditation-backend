# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=meditation_app

# JWT Secret (generate a strong random string for production)
JWT_SECRET=change_me_to_random_64_char_secret

# Server Port
PORT=5001

# Environment (development | production)
NODE_ENV=development

# CORS Origin (comma-separated for multiple origins)
# In production, set to your actual domain(s)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Upload limits (in bytes, default 50MB)
UPLOAD_MAX_SIZE=52428800
